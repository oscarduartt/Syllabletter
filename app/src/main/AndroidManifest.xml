<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oscarduartt.syllabletter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ListenToLearnActivity"
            android:theme="@style/AppTheme.Blue" />
        <activity
            android:name=".activities.MissingVowelsActivity"
            android:theme="@style/AppTheme.Green" />
        <activity
            android:name=".activities.SlidingSyllablesActivity"
            android:theme="@style/AppTheme.Red" />
        <activity
            android:name=".activities.FormingWordsActivity"
            android:theme="@style/AppTheme.Yellow" />
    </application>

</manifest>
